#include<iostream>
#include<stdio.h>
using namespace std;
struct rectangle{
    int length;
    int breadth;
    char x;
};
int main(){
    struct rectangle r1={10,5};
    r1.length=15;
    r1.breadth=4;
    cout<<"the length of the rectangle is: "<<r1.length<<endl;
    cout<<"the breadth of the rectangle is: "<<r1.breadth<<endl;
    cout<<"the size of the structure is: "<<sizeof(r1)<<endl;
    return 0;
}

output:
the length of the rectangle is: 15
the breadth of the rectangle is: 4
the size of the structure is: 12
