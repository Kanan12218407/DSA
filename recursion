#include<iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;
 void fun(int n)
{
     if(n>0){
         cout<<n<<endl;
         fun(n-1);
     }
 }
 int main(){
     int x=3;
     fun(x);
     return 0;
 }
output:
3
2
1


#include<iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;
void fun(int n)
{
    if(n>0){
        fun(n-1);
        cout<<n<<endl;
    }
}
int main(){
    int x=3;
    fun(x);
    return 0;
}
output:
1
2
3
