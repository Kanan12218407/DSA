SUM OF N USING RECURSION:
#include<iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;

int sum(int n)
{
    if(n==0)
        return 0;
    return sum(n-1)+n;
}

int main(){
    int r;
    r=sum(5);
    cout<<r<<endl;
    return 0;
}
OUTPUT:
15

SUM USING ITERATION:
#include<iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;
int isum(int n)
{
    int s=0;
    int i;
    for(i=1;i<=n;i++){
        s=s+i;
    }
    return s;
}
int main(){
    int r;
    r=isum(5);
    cout<<r<<endl;
    return 0;
}
output:
15
