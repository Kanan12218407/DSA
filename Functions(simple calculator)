#include<iostream>
#include<stdio.h>
using namespace std;
int add(int a, int b)
{
    int c;
    c=a+b;
    return c;
}
int sub(int a,int b){
    int d;
    d=a-b;
    return d;
}
int multi(int a,int b){
    int e;
    e=a*b;
    return e;
}
int divi(int a,int b){
    int f;
    f=a/b;
    return f;
}
int main(){
    int num1,num2,sum,diff,product,division;
    cout<<"enter the value of a: "<<endl;
    cin>>num1;
    cout<<"enter the value of b: "<<endl;
    cin>>num2;
    sum=add(num1,num2);
    diff=sub(num1,num2);
    product=multi(num1,num2);
    division=divi(num1,num2);
    cout<<"sum is: "<<sum<<endl;
    cout<<"difference is: "<<diff<<endl;
    cout<<"product is: "<<product<<endl;
    cout<<"the quotient is: "<<division<<endl;
    
}
output:
enter the value of a: 
10
enter the value of b: 
5
sum is: 15
difference is: 5
product is: 50
the quotient is: 2
